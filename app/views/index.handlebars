<h1>Bite The Burger!</h1>

<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
	<li>
		{{this.burger_name}}

		<form action="/{{this.id}}?_method-PUT" method="POST">
			<input type="hidden" name="devoured" value="true">
			<button type="submit">DEVOUR!</button>
		</form>
	</li>
	{{/unless}}
	{{/each}}
</ul>

<ul>
	{{#each burgers}}
	{{#if this.devoured}}
	<li>
		{{this.burger_name}}

	</li>
	{{/unless}}
	{{/each}}
</ul>

<h2>Create Your Burger!</h2>
<form class="createBurger" action="/" method="POST">
	<div class="form-group">
		<label for="burger">Burger Name:</label>
		<input type="text" id="burger" name="name">
	</div>

	<button type="submit">Add Cat</button>
</form>